<MudDialog>
    <DialogContent>
        <MudText>@Conteudo</MudText>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">@TextoBotao</MudButton>
        </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public string? Conteudo { get; set; }

    [Parameter] public string? TextoBotao { get; set; }
  
    void Submit() => MudDialog!.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog!.Cancel();
}
